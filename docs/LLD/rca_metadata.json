{
  "add": [
    {
      "requirement_id": "REQ-CART-001",
      "requirement_description": "Implement Cart API to add items to shopping cart",
      "component": "Cart Service",
      "changes": [
        {
          "change_type": "new_endpoint",
          "endpoint": "/api/v1/cart/add",
          "method": "POST",
          "description": "Add item to cart with quantity and product details"
        },
        {
          "change_type": "new_model",
          "model_name": "CartItem",
          "fields": ["product_id", "quantity", "price", "user_id"]
        }
      ]
    }
  ],
  "modify": [
    {
      "requirement_id": "REQ-CART-002",
      "requirement_description": "Update cart item quantity validation",
      "component": "Cart Service",
      "changes": [
        {
          "change_type": "update_validation",
          "endpoint": "/api/v1/cart/update",
          "validation_rules": ["quantity must be positive integer", "max quantity 99"]
        }
      ]
    }
  ],
  "delete": [
    {
      "requirement_id": "REQ-CART-003",
      "requirement_description": "Remove deprecated cart merge endpoint",
      "component": "Cart Service",
      "changes": [
        {
          "change_type": "remove_endpoint",
          "endpoint": "/api/v1/cart/merge",
          "reason": "Functionality moved to cart sync service"
        }
      ]
    }
  ]
}