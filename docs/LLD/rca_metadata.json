{
  "add": {
    "requirements": {
      "shopping_cart_management": {
        "description": "Implement shopping cart functionality allowing users to add, update, and remove items",
        "priority": "high",
        "components": ["cart_service", "cart_api", "cart_ui"]
      }
    },
    "api_endpoints": {
      "/api/cart": {
        "methods": ["GET", "POST", "PUT", "DELETE"],
        "description": "CRUD operations for shopping cart",
        "authentication": "required"
      }
    },
    "business_logic": {
      "cart_service": {
        "functions": ["addItem", "removeItem", "updateQuantity", "clearCart", "calculateTotal"],
        "validations": ["stock_availability", "price_validation", "quantity_limits"]
      }
    },
    "presentation_layer": {
      "cart_component": {
        "features": ["item_list", "quantity_selector", "remove_button", "total_display", "checkout_button"],
        "responsive": true
      }
    },
    "data_model": {
      "cart_item": {
        "fields": {
          "product_id": "string",
          "quantity": "integer",
          "price": "decimal",
          "added_at": "timestamp"
        }
      }
    },
    "testing": {
      "unit_tests": ["cart_service_tests", "cart_api_tests"],
      "integration_tests": ["cart_checkout_flow"],
      "coverage_target": "85%"
    }
  },
  "modify": {
    "product_entity": {
      "add_fields": {
        "stock_quantity": "integer",
        "max_order_quantity": "integer"
      }
    },
    "database_schema": {
      "create_table": "shopping_carts",
      "add_indexes": ["user_id", "product_id"]
    },
    "api_documentation": {
      "update_swagger": true,
      "add_examples": true
    },
    "authentication": {
      "session_management": {
        "cart_persistence": "enabled",
        "guest_cart_support": true
      }
    }
  },
  "delete": []
}